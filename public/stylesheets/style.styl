body
  color:white
  background-color: black
  background-image: url('/images/microphone.jpg')
  background-position: 130% 0%
  background-size: 70%
  background-repeat: no-repeat
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

h1
  font-family: 'Kranky', cursive;
  font-size: 40px

a
  color: #00B7FF

ul
  list-style-type: none
  left: 0px
  top:200px

button
  opacity: 0.7

button:hover
  cursor: pointer
  opacity: 1

.trackName
  opacity: 0.7

.trackName:hover
  cursor: pointer
  opacity: 1

#playAndRecord
  width: 75px
  height: 75px
  opacity: 1
  position:absolute
  top: 260px
  left: 450px

#playAndRecord:hover
  cursor: pointer
  opacity: .94

#playAndRecord:active
  margin-top: 1px
  opacity: .84

#playAll
  margin-top: 4px
  width: 108px
  height: 86px
  opacity: .68
  // display: inline
  position: absolute
  top:249px
  left: 525px

#playAll:hover
  cursor: pointer
  opacity: .64

#playAll:active
  // margin-top: 1px
  opacity: .58


#status
  font-size: 20px
  color: red
  position: absolute
  top: 350px
  left: 450px

.saved
  border-style: solid
  border-color: blue

#help
  position: fixed
  top 30px
  left 30px
  opacity: 0.7
  text-decoration: underline

#help:hover
  opacity: 1
  cursor: pointer

span.streaming
  opacity: 0.8
  position: absolute;
  top: 100px
  left: 450px
  color: rgba(0,0,0,1);
  text-decoration: none;
  background-color: rgba(233,245,10,1);
  font-family: 'Yanone Kaffeesatz';
  font-size: 2em;
  display: block;
  padding: 4px;
  -webkit-border-radius: 100px;
  -moz-border-radius: 100px;
  border-radius: 100px;
  -webkit-box-shadow: 0px 9px 0px rgba(111,115,33,1), 0px 9px 25px rgba(0,0,0,.7);
  -moz-box-shadow: 0px 9px 0px rgba(111,115,33,1), 0px 9px 25px rgba(0,0,0,.7);
  box-shadow: 0px 7px 0px rgba(111,115,33,1), 0px 7px 25px rgba(0,0,0,.7);
  margin: 100px auto;
  width: 160px;
  text-align: center;
  -webkit-transition: all .1s ease;
  -moz-transition: all .1s ease;
  -ms-transition: all .1s ease;
  -o-transition: all .1s ease;
  transition: all .1s ease;

span.streaming:active
  top: 103px;
  -webkit-box-shadow: 0px 1px 0px #6f7321, 0px 1px 6px rgba(0,0,0,0.9)
  -moz-box-shadow: 0px 3px 0px #6f7321, 0px 3px 6px rgba(0,0,0,0.9)
  box-shadow: 0px 3px 0px #6f7321, 0px 3px 6px rgba(0,0,0,0.9)

span.streaming:hover
  cursor: pointer
  opacity: 1
