span.streaming
  position: relative
  opacity: 0.8
  color: black;
  text-decoration: none;
  background-color: rgba(233,245,10,1);
  font-family: 'Yanone Kaffeesatz';
  text-shadow: 0 -1px 0 white;
  font-size: 2em;
  display: block;
  padding: 4px;
  -webkit-border-radius: 100px;
  -moz-border-radius: 100px;
  border-radius: 100px;
  -webkit-box-shadow: 0px 9px 0px rgba(111,115,33,1), 0px 9px 25px rgba(0,0,0,.7);
  -moz-box-shadow: 0px 9px 0px rgba(111,115,33,1), 0px 9px 25px rgba(0,0,0,.7);
  box-shadow: 0px 6px 0px rgba(111,115,33,1), 0px 7px 25px rgba(0,0,0,1), inset 0 0 10px rgba(111,115,33,1), 0 0 10px rgba(0,0,0,1);
  margin: 20px auto;
  width: 160px;
  text-align: center;
  -webkit-transition: all .1s ease;
  -moz-transition: all .1s ease;
  -ms-transition: all .1s ease;
  -o-transition: all .1s ease;
  transition: all .1s ease;

span.streaming:active
  top: 3px
  -webkit-box-shadow: 0px 1px 0px #6f7321, 0px 1px 6px rgba(0,0,0,0.9)
  -moz-box-shadow: 0px 3px 0px #6f7321, 0px 3px 6px rgba(0,0,0,0.9)
  box-shadow: 0px 3px 0px #6f7321, inset 0 0 15px rgba(111,115,33,1), 0 0 10px rgba(0,0,0,.7);

span.streaming:hover
  cursor: pointer
  opacity: 1
