<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href='http://fonts.googleapis.com/css?family=Kranky' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="/javascripts/recorder.js"></script>
    <script src="/javascripts/HopeYouLikeJamminToo.js"></script>
  </head>
  <body>
    <button id="record"></button>
    <center><h1><%= title %></h1></center>
    <center>PLUG IN HEADPHONES before starting stream.</center>
    <center class="buttons">
      <center><span class="streaming">stream</span></center>
      <center>
        <div class="coolbtns"><img id="playAndRecord" src="/images/record_button@2x.png"></div>
        <div class="coolbtns"><img id="playAll" src="/images/silver-play-button.png"><div>
      </center>
      <center id="help">help</center>
      <div id="status"></div>
    </center>
    <div>
      <ul id="recordingslist">
        <% for(var i = 0; i < tracks.length; i++) { %>
          <li>
            <span class="trackName"><%= tracks[i].name %></span><br>
            <audio src="https://wejammin.s3.amazonaws.com/data/<%= tracks[i]._id %>" controls type="audio/x-wav"></audio>
            <button class="removal">X</button>
          </li><br>
        <% } %>
      </ul>
    </div>
  </body>
</html>
